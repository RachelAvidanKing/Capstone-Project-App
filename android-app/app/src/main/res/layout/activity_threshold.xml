<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textSize="22sp"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Personal Threshold"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintTop_toBottomOf="@+id/btnExit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <View
        android:id="@+id/patchTopLeft"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toStartOf="@+id/patchTopRight"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp" />

    <View
        android:id="@+id/patchTopRight"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/patchTopLeft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/patchTopLeft"
        android:layout_marginStart="40dp" />

    <View
        android:id="@+id/patchBottomLeft"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/patchTopLeft"
        app:layout_constraintStart_toStartOf="@id/patchTopLeft"
        app:layout_constraintEnd_toEndOf="@id/patchTopLeft"
        android:layout_marginTop="32dp" />

    <View
        android:id="@+id/patchBottomRight"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/patchBottomLeft"
        app:layout_constraintStart_toStartOf="@id/patchTopRight"
        app:layout_constraintEnd_toEndOf="@id/patchTopRight" />


    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which is brighter?"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/patchBottomLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>


    <Button
        android:id="@+id/btnN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:paddingHorizontal="40dp"
        android:text="Next"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvTrialCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRIAL 1 OF 100"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:background="@drawable/trial_counter_bg"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:elevation="8dp"
        android:shadowColor="#808080"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>