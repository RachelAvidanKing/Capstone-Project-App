<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Essential permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".CapstoneApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CapstoneProjectApplication"
        tools:targetApi="31">


        <activity
            android:name=".boundary.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.CapstoneProjectApplication">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".boundary.RegistrationActivity"
            android:exported="true"
            android:theme="@style/Theme.CapstoneProjectApplication">
        </activity>

        <activity
            android:name=".boundary.ExplainJNDActivity"
            android:exported="true"
            android:theme="@style/Theme.CapstoneProjectApplication">
        </activity>

        <activity
            android:name=".boundary.ThresholdActivity"
            android:exported="false"
            android:theme="@style/Theme.CapstoneProjectApplication" />

        <activity
            android:name=".boundary.ExplainTargetActivity"
            android:exported="true"
            android:theme="@style/Theme.CapstoneProjectApplication">
        </activity>

        <activity
            android:name=".boundary.TargetActivity"
            android:exported="false"
            android:theme="@style/Theme.CapstoneProjectApplication" />

        <activity android:name=".boundary.CompletionActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.CapstoneProjectApplication"/>
    </application>
</manifest>