<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/success_background">


    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explanation for the next part of the experiment:"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

    <!-- Explanation Text -->
    <TextView
        android:id="@+id/tvExplanation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="On the next page, you will hear three beeps in the same tone. \nOn the fourth beep, which will be in a different tone, you will need to move your finger from the center of the board (where the “X” is marked) toward the target.
    \nThere are four targets, and you must select the one with the obvious color difference. \nIMPORTANT: Avoid the black square obstacles on the way to your target!
\nYou will need to complete this test 15 times.\n\nGood luck! :)"
        android:textSize="26sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Remark1 -->
    <TextView
        android:id="@+id/btnRemark1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="*Please press anywhere on the screen to continue."
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/tvExplanation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Remark2 -->
    <TextView
        android:id="@+id/btnRemark2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="**You may exit the test at any time. However, your progress will not be saved unless you start and complete all trials in experiment in the same session."
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/btnRemark1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
