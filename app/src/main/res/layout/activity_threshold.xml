<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Exit Button - Top Left -->
    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textSize="22sp"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>


    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Personal Threshold"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintTop_toBottomOf="@+id/btnExit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Square A -->
    <View
        android:id="@+id/viewA"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/viewB"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="80dp"/>


    <!-- Square B -->
    <View
        android:id="@+id/viewB"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toEndOf="@id/viewA"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="80dp"/>

    <!-- Text below square A -->
    <TextView
        android:id="@+id/labelA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/viewA"
        app:layout_constraintStart_toStartOf="@id/viewA"
        app:layout_constraintEnd_toEndOf="@id/viewA"
        android:layout_marginTop="8dp"/>

    <!-- Text below square B -->
    <TextView
        android:id="@+id/labelB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/viewB"
        app:layout_constraintStart_toStartOf="@id/viewB"
        app:layout_constraintEnd_toEndOf="@id/viewB"
        android:layout_marginTop="8dp"/>

    <!-- Question -->
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which is brighter?"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/labelA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>


    <!-- Next Button - Only visible after completion -->
    <Button
        android:id="@+id/btnN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:paddingHorizontal="40dp"
        android:text="Next"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Trial Counter -->
    <TextView
        android:id="@+id/tvTrialCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="TRIAL 1 OF 100"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/btnN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>